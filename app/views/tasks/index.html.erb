<% provide(:title, 'All Tasks') %>
<div class="info_block">
    <div class="container padding25">
        <h1 class="titulo">Tasks</h1>
    </div>

    
    <div class="container padding15">
            <div class="col-xs-12 col-md-12">
                <%= button_to "New task", newtask_path, :class => "btn btn-default", :method => :get  %>
                
                <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Action</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Date</th>
                         <th>Status</th>
                      </tr>
                      
                      <tr>
                          <%= render @tasks %>
                      </tr>
                      
                    </thead>
                </table>
                
                
                
            </div>            
        </div>
        <div class="container padding15">
    </div>
</div>