 <%= form_for(@task, :html => {class: 'form-horizontal'}) do |f| %>
             <legend>New Task</legend>
             <div class="row">
                 <div class="col-md-6">
                     
                    <div class="form-group">
                        <%= f.label :name,'Name*', class:'col-md-4 control-label' %>
                        <% # options = options_from_collection_for_select(@donors, 'id', 'name') %>
                        <div class="col-md-5">
                        <%=  f.text_field :name, class: 'form-control', placeholder: 'Name' %>
                        </div>
                    </div>  
                    
                    <!-- Textarea -->
                    <div class="form-group">
                            <%= f.label :description,'Description', class:'col-md-4 control-label' %>
                        <div class="col-md-5">
                            <%= f.text_area :description, class: 'form-control', placeholder: 'Description' %>
                        </div>
                    </div>

                        <!-- Text input-->
                        <div class="form-group">
                                <%= f.label :date,'Date', class:'col-md-4 control-label' %>
                            <div class="col-md-5">
                                <%= f.date_field :date, class: 'form-control input-md', placeholder: 'Date' %>
                            </div>
                        </div>
                        
                         <div class="form-group">
                      <%= f.label :status, 'Status*', class:'col-md-4 control-label' %>
                      <div class="col-md-5">
                        <%= f.select :status, options_for_select([['To Do', 'toDo'], ['In Progress', 'inProgress'], ['Done', 'done']], 'toDo'), class: 'form-control' %>

                      </div>
                    </div>
                    </div>
                    
                    
                                                 
                 </div>

                 
                 
        <div class="row">
            <div class="col-md-9">
                <div class="form-group">
                    <div class="col-md-3">
                        <%= f.submit "Save", class: "btn btn-danger agregar" %>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="col-md-6">
                        <%= link_to "Back", tasks_path, :class => 'btn btn-default' %>
                    </div>
            </div>
        </div>
                 
        <% end %> 